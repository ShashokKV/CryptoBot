<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/balance_line_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:showDividers="end">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/CryptoImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/cripto_icon"
            app:srcCompat="@drawable/generic_crypto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/CryptoNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="text" />
    </androidx.appcompat.widget.LinearLayoutCompat >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/LIvecoinBalanceView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="0.3"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/BittrexBalanceView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="0.3"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="text" />
</androidx.appcompat.widget.LinearLayoutCompat>