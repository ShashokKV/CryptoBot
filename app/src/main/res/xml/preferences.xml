<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.PreferenceCategory
        android:title="@string/bittrex_api_keys"
        android:key="bittrex_keys">
        <androidx.preference.EditTextPreference
            android:key="@string/bittrex_api_key"
            android:title="@string/api_key"
            android:dialogLayout="@layout/keys_dialog"/>
        <androidx.preference.EditTextPreference
            android:key="@string/bittrex_secret_key"
            android:title="@string/secret_key"
            android:dialogLayout="@layout/keys_dialog"/>
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory
        android:title="@string/livecoin_api_keys"
        android:key="livecoin_keys">
        <androidx.preference.EditTextPreference
            android:key="@string/livecoin_api_key"
            android:title="@string/api_key"
            android:dialogLayout="@layout/keys_dialog"/>
        <androidx.preference.EditTextPreference
            android:key="@string/livecoin_secret_key"
            android:title="@string/secret_key"
            android:dialogLayout="@layout/keys_dialog"/>
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory
        android:title="Trading preferences">
        <androidx.preference.EditTextPreference
            android:title="Minimum profit percent"
            android:key="@string/min_profit_percent"
            android:dialogLayout="@layout/number_dialog"
            android:defaultValue="3"/>
        <androidx.preference.EditTextPreference
            android:title="Run period in minutes"
            android:key="@string/service_run_period"
            android:dialogLayout="@layout/number_dialog"
            android:defaultValue="5"/>
        <androidx.preference.EditTextPreference
            android:title="Statistic collection period"
            android:key="@string/statistic_run_period"
            android:dialogLayout="@layout/number_dialog"
            android:defaultValue="30"/>
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>